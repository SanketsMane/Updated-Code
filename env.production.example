# Environment Variables Template for Production
# Copy this file to .env.production and fill in your actual values

# ========================================
# Database Configuration
# ========================================
DATABASE_URL="postgresql://user:password@host:5432/database?pgbouncer=true"
DIRECT_URL="postgresql://user:password@host:5432/database"

# ========================================
# Authentication (Better Auth)
# ========================================
BETTER_AUTH_SECRET="your-secret-key-here-min-32-chars"
BETTER_AUTH_URL="http://13.48.30.48:3000"  # Update with your domain or IP

# ========================================
# AWS S3 Configuration
# ========================================
AWS_REGION="your-region"
AWS_ACCESS_KEY_ID="your-access-key"
AWS_SECRET_ACCESS_KEY="your-secret-key"
AWS_S3_BUCKET_NAME="your-bucket-name"

# ========================================
# Stripe Payment Configuration
# ========================================
STRIPE_SECRET_KEY="sk_test_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# ========================================
# Email Configuration (Nodemailer)
# ========================================
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT="587"
EMAIL_USER="your-email@gmail.com"
EMAIL_PASSWORD="your-app-password"
EMAIL_FROM="noreply@kidokool.com"

# ========================================
# Application Configuration
# ========================================
NEXT_PUBLIC_APP_URL="http://13.48.30.48:3000"  # Update with your domain
NODE_ENV="production"

